<main id="pageform">
    <div class="container d-flex justify-content-center">
            <form method="POST" action="/parameter/update">
                <div class="row justify-content-center">
                    <div class="col">
                        <div class="card text-dark bg-light text-center mt-2">
                            <div class="card-header">
                                <h3>Novo Parâmetro</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-3">
                        <div class="card text-dark bg-light text-center" style="min-height:470px">
                            <div class="card-body">
                                <fieldset>
                                    <input class="form-control" name="category" type="text" placeholder="Categoria" value="<%= parameter.category %>" required><br>
                                    <input class="form-control" name="fuel" type="text" placeholder="Combustível" value="<%= parameter.fuel %>" required><br>
                                    <input class="form-control" name="unity_system" type="text" placeholder="Unidade" value="<%= parameter.unity_system %>" required><br>
                                    <input class="form-control" name="co2_fossil" type="number" placeholder="CO2 fóssil (kg/unidade)" value="<%= parameter.co2_fossil %>" required><br>
                                    <input class="form-control" name="ch4" type="number" placeholder="CH4 (kg/unidade)" value="<%= parameter.ch4 %>" required><br>
                                    <input class="form-control" name="N20" type="number" placeholder="N2O (kg/unidade)" value="<%= parameter.N20 %>" required><br>
                                    <input class="form-control" name="biogenic_co2" type="number" placeholder="CO2 biogênico (kg/unidade)" value="<%= parameter.biogenic_co2 %>" required><br>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="card text-dark bg-light text-center" style="min-height:470px">
                            <div class="card-body">
                                <fieldset>
                                    <p>CH4 (kg/unidade)</p><br>
                                    <input class="form-control" name="ch4_energy" type="number" placeholder="Energia" value="<%= parameter.ch4_energy %>" required ><br>
                                    <input class="form-control" name="ch4_manufactured_built" type="number" placeholder="Manufatura ou Construção" value="<%= parameter.ch4_manufactured_built %>" required ><br>
                                    <input class="form-control" name="ch4_comercial_institutional" type="number" placeholder="Comercial ou Institucional" value="<%= parameter.ch4_comercial_institutional %>" required ><br>
                                    <input class="form-control" name="ch4_rafp" type="number" placeholder="Residencial, Agricultura, Florestal ou Pesca" value="<%= parameter.ch4_rafp %>" required ><br>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="card text-dark bg-light text-center" style="min-height:470px">
                            <div class="card-body">
                                <fieldset>
                                    <p>N2O (kg/unidade)</p><br>
                                    <input class="form-control" name="n2o_energy" type="number" placeholder="Energia" value="<%= parameter.n2o_energy %>" required><br>
                                    <input class="form-control" name="n2o_manufactured_built" type="number" placeholder="Manufatura ou Construção" value="<%= parameter.n2o_manufactured_built %>" required><br>
                                    <input class="form-control" name="n2o_comercial_institutional" type="number" placeholder="Comercial ou Institucional" value="<%= parameter.n2o_comercial_institutional %>" required><br>
                                    <input class="form-control" name="n2o_rafp" type="number" placeholder="Residencial, Agricultura, Florestal ou Pesca" value="<%= parameter.n2o_rafp %>"required><br>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="card text-dark bg-light text-center" style="min-height:470px">
                            <div class="card-body">
                                <fieldset>
                                    <input class="form-control" name="hfc_32" type="number" placeholder="HFC-32 (kg/unidade)" value="<%= parameter.hfc_32 %>" required><br>
                                    <input class="form-control" name="hfc_125" type="number" placeholder="HFC-125 (kg/unidade)" value="<%= parameter.hfc_125 %>" required><br>
                                    <input class="form-control" name="cfc_12" type="number" placeholder="CFC-12 (kg/unidade)" value="<%= parameter.cfc_12 %>" required><br>
                                    <input class="form-control" name="reference" type="text" placeholder="Referência" value="<%= parameter.reference %>" required><br>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col">
                        <div class="card text-dark bg-light text-center mt-2 mb-2">
                            <input type="hidden" name="id" value="<%=parameter.id %>"> 
                            <div class="card-header">
                                <button type="submit" class="btn btn-send ">Atualizar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>

