<main id="pageform">
    <section class="login">
        <div class="container d-flex justify-content-center">
            <div class="card text-dark bg-light text-center" style="width: 300px;">
                <div class="card-header mt-3">
                    <p class="fs-4">Editar Categoria</p>
                </div>
                <div class="card-body">
                    <form method="POST" action="/categories/update">
                        <input class="form-control" name="title" type="text" placeholder="Categoria" value="<%= category.title %>" required>
                        <br>
                        <input type="hidden" name="id" value="<%=category.id %>"> 
                        <button type="submit" class="btn btn-send ">Atualizar</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>

