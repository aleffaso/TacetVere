<button hidden type="button" class="btn btn-send" data-bs-toggle="modal" data-bs-target="#calculator3" data-bs-dismiss="modal">
    Processamento de Emissões
</button>

<div class="modal fade" id="calculator3" tabindex="-1" role="dialog" aria-labelledby="calculator3Label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Informações sobre sua empresa (2 de 6)</h4>
                <!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"> -->
                <span aria-bs-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                    <fieldset>
                        <input class="form-control" name="people_organization_amount" type="number" placeholder="Número de pessoas na organização">
                        <br>
                        <input class="form-control" name="people_out_of_organization_amount" type="number" placeholder="Número de terceirizados fixos">
                        <br>
                        <select id="sector" class="form-control" name="company_sector" required>
                            <option value="">Selecione o setor - Campo obrigatório</option>
                            <option value="geracao-de-energia">Geração de Energia</option>
                            <option value="oleo-e-gas">Óleo e Gás</option>
                            <option value="extracao-mineral-de-carvao">Extração Mineral de Carvão</option>
                            <option value="aluminio">Alumínio</option>
                            <option value="ferro-e-aco">Ferro e aço</option>
                            <option value="quimicos">Químicos</option>
                            <option value="cimento-e-cal">Cimento e Cal</option>
                            <option value="residuos">Resíduos</option>
                            <option value="papel-e-celulose">Papel e Celulose</option>
                            <option value="producao-de-HCFC22">Produção de HCFC22</option>
                            <option value="producao-semicondutores">Produção de Semicondutores</option>
                            <option value="producao-de-servicos">Produção de Serviços</option>
                        </select>
                        <br>
                        <select id="companyTaskNature" class="form-control" name="company_task_nature" required>
                            <option>Selecione a natureza das atividades - Campo obrigatório</option>
                            <option>Energia</option>
                            <option>Manufatura ou Construção</option>
                            <option>Comercial ou Institucional</option>
                            <option>Residencial, Agricultura, Florestal ou Pesca</option>
                          </select>
                        <br>
                        <select id="year" class="form-control" name="year" required>
                            <option value="">Selecione o ano inventariado - Campo obrigatório</option>
                            <option value="2007">2007</option>
                            <option value="2008">2008</option>
                            <option value="2009">2009</option>
                            <option value="2010">2010</option>
                            <option value="2011">2011</option>
                            <option value="2012">2012</option>
                            <option value="2013">2013</option>
                            <option value="2014">2014</option>
                            <option value="2015">2015</option>
                            <option value="2016">2016</option>
                            <option value="2017">2017</option>
                            <option value="2018">2018</option>
                            <option value="2019">2019</option>
                            <option value="2020">2020</option>
                            <option value="2021">2021</option>
                        </select>
                        <br>
                    </fieldset>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-bs-dismiss="modal" style="background-color:rgb(130,187,54); border:none;">Fechar</button>
                <!-- <button type="button" class="btn btn-secondary btn-prev">Anterior</button> -->
                <button id='nextTwo' type="button" class="btn btn-send btn-next">Próximo</button>
            </div>
        </div>
    </div>
</div>

<script>
    $('#sector, #companyTaskNature, #year').change(function () {
        if(($('#sector').val().length > 0) && ($('#companyTaskNature').val().length) > 0 && ($('#year').val().length) > 0){
            $('#nextTwo').prop("disabled", false);
        }else{
            $('#nextTwo').prop("disabled", true);
        }
    }).change()
</script>