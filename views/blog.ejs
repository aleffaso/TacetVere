<!--Header-->
<%- include("partials/header.ejs") %>
<!--Navbar-->
<%- include("partials/navbar.ejs") %>

<div class="container">
    <div class="row">
        <div class="col-lg-12 mt-5">
            <article>
                <header>
                    <h1 class="fw-bolder mb-1 text-center mb-4">Acompanhe nosso blog</h1>
                </header>
                <hr> 
            </article>
        </div>
        <% articles.forEach(articles => {%>
            <% const img = articles.body.match(/<img.*?src="(.*?)"/g) %>
            <% const imgBody = []  %>

            <% if (img != null){ %> 

                <% const imgBody = img.toString().split(' ').slice(-1) %>
                <% const imgBodySliced = imgBody.toString().split('"') %>
               
                <div class="col-lg-4 mt-2">
                    <div class="text-center">
                        <div class="card bg-light mb-3">
                            <img class="card-img-top" src="<%= imgBodySliced[1] %>" style="max-height: 167px; object-fit: cover;"/>
                            <div class="card-body">
                                <h5 class="card-title"><%= articles.title %></h5>
                                <a class="btn btn-send" href="/article/<%= articles.id %>">Visualizar</a>
                            </div>
                        </div>
                    </div>
                </div>

            <% }else{ %>

                <div class="col-lg-4 mt-2">
                    <div class="text-center">
                        <div class="card bg-light mb-3">
                            <img class="card-img-top" src="assets/img/slide/slide-1.jpg" style="max-height: 167px; object-fit: cover;"/>
                            <div class="card-body">
                                <h5 class="card-title"><%= articles.title %></h5>
                                <a class="btn btn-send" href="/article/<%= articles.id %>">Visualizar</a>
                            </div>
                        </div>
                    </div>
                </div>

            <% } %>
        <% }) %>
    </div>  
</div>

<!--Footer-->
<%- include("sections/07_footer.ejs") %>
